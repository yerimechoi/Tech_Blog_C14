<div>
    <div class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
        </div>
        <div class="card-body">
            <p>{{post.content}}</p>
        </div>
        <button class="btn">
            <a href="{{post.id}}/comment">Add Comment</a>
        </button>
    </div>

    {{#if comments.length}}
    {{#each comments}}
    <div class="card">
        <div class="card-header">
            <h4>Comments</h4>
        </div>
        <section class="card-body">
            <div>
                <p>
                    {{comment}}
                </p>
                <p>
                    {{user.username}}, {{createdAt}}
                </p>
            </div>
        </section>
        {{/each}}
        {{/if}}
    </div>
</div>

