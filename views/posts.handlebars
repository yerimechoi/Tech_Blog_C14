<div>
    {{#each posts}}
    <div class="card">
        <div class="card-header">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <p>Posted by {{User.username}} on {{createdAt}}</p>
        </div>
        <div class="card-body">
            <p>{{body}}</p>
        </div>
    </div>
    {{/each}}
</div>