<div>
    <div class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
        </div>
        <div class="card-body">
            <p>{{post.content}}</p>
        </div>
        {{#if comments.length}}
        {{#each comments}}
        <section class="card-body">
            <h4>Comments</h4>
            <div>
                <p>
                    {{comment}}
                </p>
                <p>
                    {{user.username}}, {{createdAt}}
                </p>
            </div>
        </section>
        {{/each}}
        {{/if}}

        <input name="post-id" type="hidden" value="{{post.id}}" />
        <textarea name="comment"></textarea>
        <button class="btn comment-form">Comment</button>
    </div>
</div>

<script src="/js/comment.js"></script>